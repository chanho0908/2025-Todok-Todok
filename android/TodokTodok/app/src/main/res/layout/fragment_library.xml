<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/space_x_large"
    tools:context=".presentation.view.note.NoteFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_library"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_library_title"
        style="@style/HeaderTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/all_library"
        app:layout_constraintBottom_toBottomOf="@id/abl_library"
        app:layout_constraintEnd_toEndOf="@id/abl_library"
        app:layout_constraintStart_toStartOf="@id/abl_library"
        app:layout_constraintTop_toTopOf="@id/abl_library" />

    <TextView
        android:id="@+id/tv_library_list"
        style="@style/BaseTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_x_small"
        android:layout_marginTop="@dimen/space_large"
        android:layout_marginBottom="@dimen/space_x_small"
        android:gravity="start"
        android:text="@string/library_list"
        app:layout_constraintTop_toBottomOf="@id/abl_library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_library_list" />

    <ImageView
        android:id="@+id/iv_library_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_x_large"
        android:background="@drawable/btn_plus_oval"
        android:contentDescription="@string/content_description_navigate_to_book_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
